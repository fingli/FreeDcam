<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/app_icon_size"
        android:text="Stack Mode:"
        android:id="@+id/textView" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:spinnerMode="dropdown"
        android:id="@+id/freedviewer_stack_stackvalues_button" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Stack"
        android:id="@+id/button_stackPics" />

    <com.ortiz.touch.TouchImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/freedviewer_stack_imageview" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="1/1"
        android:id="@+id/textView_stack_count"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:id="@+id/button_stack_close"
        android:layout_gravity="center_horizontal" />
</LinearLayout>